# Cognitive Black Box - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# AI API CONFIGURATIONS
# =============================================================================

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development/staging/production)
APP_ENV=development

# Debug Mode (true/false)
DEBUG_MODE=true

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session Timeout (in minutes)
SESSION_TIMEOUT_MINUTES=30

# Maximum API Calls Per Session
MAX_API_CALLS_PER_SESSION=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Enable Performance Logging
ENABLE_PERFORMANCE_LOG=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret Key for Session Management (generate a secure random string)
SECRET_KEY=your_secret_key_here

# Rate Limiting
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable A/B Testing
ENABLE_AB_TESTING=false

# Enable Analytics
ENABLE_ANALYTICS=false

# =============================================================================
# EXTERNAL SERVICES (Future Use)
# =============================================================================

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/cognitive_blackbox

# Redis Cache (if needed in future)
# REDIS_URL=redis://localhost:6379/0

# Email Service (if needed in future)
# EMAIL_API_KEY=your_email_service_api_key
# EMAIL_FROM_ADDRESS=noreply@cognitive-blackbox.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Mock API Responses (for testing without real API calls)
MOCK_API_RESPONSES=false

# Enable Debug UI Components
SHOW_DEBUG_UI=true

# Enable Test Mode
TEST_MODE=false
